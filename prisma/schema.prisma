generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////////////////////////////////////////////
// ENUMS
/////////////////////////////////////////////////

enum TenantStatus {
  TRIAL
  ACTIVE
  SUSPENDED
  CLOSED
}

/////////////////////////////////////////////////
// MODELS
/////////////////////////////////////////////////

model Tenant {
  id        String       @id @default(uuid())
  name      String
  status    TenantStatus @default(TRIAL)
  createdAt DateTime     @default(now())

  users     User[]

  @@index([status])
}

model User {
  id        String    @id @default(uuid())
  tenantId  String
  email     String
  name      String
  role      String
  isActive  Boolean   @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())

  tenant    Tenant    @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, email])
  @@index([tenantId])
}

model AuditLog {
  id        String   @id @default(uuid())
  tenantId  String
  userId    String
  action    String
  entity    String
  entityId  String?
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([tenantId])
  @@index([action])
  @@index([entity])
}

model Customer {
  id        String   @id @default(cuid())

  // Tenant ownership
  tenantId  String

  // Business identity
  name      String
  code      String?  // optional human-friendly identifier
  email     String?
  phone     String?
  notes     String?

  // Lifecycle
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@index([tenantId])
  @@index([tenantId, deletedAt])
  @@unique([tenantId, code])
}

model CustomerAddress {
  id            String   @id @default(cuid())

  tenantId      String
  customerId    String

  label         String?  // "Head Office", "Warehouse", etc.
  line1         String
  line2         String?
  city          String
  state         String?
  postalCode    String
  country       String

  isBilling     Boolean  @default(false)
  isShipping    Boolean  @default(false)
  isDefault     Boolean  @default(false)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  @@index([tenantId])
  @@index([customerId])
  @@index([tenantId, customerId, deletedAt])
}

model CustomerContact {
  id          String   @id @default(cuid())

  tenantId    String
  customerId  String

  name        String
  email       String?
  phone       String?
  designation String?

  isPrimary   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@index([tenantId])
  @@index([customerId])
  @@index([tenantId, customerId, deletedAt])
}
